@using proj.Models
@{
    ViewBag.Title = "ShowCourses";
}

<style>

    body {
        background-color: #31302a;
        color: white;
        font-family: Arial, Helvetica, sans-serif;
    }

    .holder {
        margin-top: 130px;
        width: 100%;
        height: 340px;
        background-color: grey;
    }

    .options {
        padding-top: 50px;
        margin: 0 auto;
        text-align: center;
    }

    .footer {
        width: 100%;
        position: absolute;
        bottom: 0;
    }

    .footerImg {
        position: relative;
        display: block;
        float: left;
    }

    table {
        width: 100%;
    }

    th {
        height: 50px;
        padding: 15px;
        text-align: left;
    }

    tr {
        padding: 25px;
        text-align: left;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    h2 {
        padding-left: 150px;
        padding-top: 50px;
    }
</style>
<div class="holder">

    @if (Model.courses[0] != null)
    {
        <div><b>Schedule</b><br /></div>

        <table class="table table-bordered table-responsive table-hover">
            <tr bgcolor="#a2b9bc">
                <th>Course Id </th>
                <th>Course Name </th>
                <th>Day</th>
                <th>Starts at </th>
                <th>Finishes as</th>
                <th>Room </th>

            </tr>
            @foreach (Courses obj in Model.courses)
            {
                <tr bgcolor="#b2ad7f">
                    <td>@obj.CourseId</td>
                    <td>@obj.CourseName</td>
                    <td>@obj.Day</td>
                    <td>@obj.SHour</td>
                    <td>@obj.EHour</td>
                    <td>@obj.Room</td>

                </tr>
            }


        </table>
        <form class="options" method="post" action="ShowStudentForCourse" onsubmit="SetData()">
            <select name="courseId" id="courseId">
                @foreach (Courses obj in Model.courses)
                {
                    <option value=@obj.CourseId>@obj.CourseId</option>
                }
            </select>
            <input type="submit" name="students in course" value="enter" />
        </form>
    }

    @if (Model.courses[0] == null)
    {
        <label>You got no courses you teach.</label>
    }
</div>
<footer class="footer">
    <img class="footerImg" src="@Url.Content("~/Content/footer.png")" align="bottom" style=" width: 100%;" />
</footer>
