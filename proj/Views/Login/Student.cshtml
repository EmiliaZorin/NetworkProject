
@{
    ViewBag.Title = "Student";
}

<style>

    body {
        background-color: #31302a;
        color: white;
        font-family: Arial, Helvetica, sans-serif;
    }
    .holder {
        margin-top: 130px;
        width: 100%;
        height: 340px;
        background-color: grey;
    }
    .studentForm {
        margin: 0 auto;
        border: 15px;
        width: 100%;
        margin-bottom: 20px;
        text-align: center;
    }

    .examsButton, .scheduleButton {
        background-color: forestgreen;
        color: white;
        margin: 16px;
        text-align: center;
        padding: 10px 24px;
        width: 150px;
        -webkit-transition-duration: 0.4s;
        transition-duration: 0.4s;
        border-radius: 8px;
        border: 2px solid;
        font-size: 16px;
        text-align: center;
    }

    .exams:hover, .schedule:hover {
        background-color: white;
        color: #31302a;
        border: 2px solid black;
    }
    .footer {
        width: 100%;
        position: absolute;
        bottom: 0;
    }

    .footerImg {
        position: relative;
        display: block;
        float: left;
    }
    h2 {
        padding-left: 150px;
        padding-top: 50px;
    }

</style>


<div class="holder">
    <h2> Welcome @Session["firstname"].ToString(),</h2>
    <form class="studentForm" action="StudentActions" method="post">
        <input class="scheduleButton" id="Schedule" type="submit" name="schedule" value="Schedule" />
        <br />
        <input class="examsButton" id="Exams" type="submit" name="exams" value="Exams" />

    </form>
</div>
<footer>
    <img class="footerImg" src="@Url.Content("~/Content/footer.png")" align="bottom" style=" width: 100%;" />
</footer>
