
@{
    ViewBag.Title = "Lecturer";
}
<style>

    body {
        background-color: #31302a;
        color: white;
        font-family: Arial, Helvetica, sans-serif;
    }

    .holder {
        margin-top: 130px;
        width: 100%;
        height: 340px;
        background-color: grey;
    }

    .lectForm {
        margin: 0 auto;
        border: 15px;
        width: 100%;
        margin-bottom: 20px;
        text-align: center;
    }

    .coursesButton, .studentGradetButton {
        background-color: forestgreen;
        color: white;
        margin: 16px;
        text-align: center;
        padding: 10px 24px;
        width: 150px;
        -webkit-transition-duration: 0.4s;
        transition-duration: 0.4s;
        border-radius: 8px;
        border: 2px solid;
        font-size: 16px;
        text-align: center;
    }

        .coursesButton:hover, .studentGradetButton:hover {
            background-color: white;
            color: #31302a;
            border: 2px solid black;
        }

    .footer {
        width: 100%;
        position: absolute;
        bottom: 0;
    }

    .footerImg {
        position: relative;
        display: block;
        float: left;
    }

    h2 {
        padding-left: 150px;
        padding-top: 50px;
    }
</style>

<div class="holder">
    <h2> Welcome @Session["firstname"].ToString(),</h2>
    <form class="lectForm" action="LecturerActions" method="post">
        <input class="coursesButton" id="Courses" type="submit" name="courses" value="Courses" />
        <br />

    </form>
</div>
<footer class="footer">
    <img class="footerImg" src="@Url.Content("~/Content/footer.png")" align="bottom" style=" width: 100%;" />
</footer>

@if ((string)Session["grade"] == "invalid input grade")
{
    <script type="text/javascript">
        alert("invalid input grade");
    </script>
    Session["grade"] = "";
}
@if ((string)Session["grade"] == "Updated grade")
{
    <script type="text/javascript">
        alert("Updated grade");
    </script>
    Session["grade"] = "";
}
