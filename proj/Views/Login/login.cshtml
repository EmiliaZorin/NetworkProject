@model proj.Models.User
@{
    ViewBag.Title = "Login";
}

<style>

    body {
        background-color: #31302a;
        color: white;
        font-family: Arial, Helvetica, sans-serif;
    }

    .holder {
        margin-top:130px;
        width: 100%;
        height: 340px;
        background-color: grey;        
    }

    .formInput {
        margin: 0 auto;
        border: 15px;
        width: 100%;
        margin-bottom: 20px;
        text-align: center;
    }
   
    .pass, .username {
        margin-bottom: 20px;
        color: black;
        border-radius: 10px;
        text-align: center;
        position:sticky;
    }

    .submitButton {
        margin-left: 20px;
        background-color: forestgreen;
        color: white;
        text-align: center;
        padding: 10px 24px;
        -webkit-transition-duration: 0.4s;
        transition-duration: 0.4s;
        border-radius: 8px;
        border: 2px solid;
        font-size: 16px;
        display: inline-block;
        text-align: center
    }

    .submitButton:hover {
        background-color: white;
        color: #31302a;
        border: 2px solid black;
    }

    label {
        margin-top: 10px;
        margin-bottom:20px;
    }

    .footer {
        width: 100%;
        position: absolute;
        bottom: 0;
    }
    .footerImg {
        position: relative;
        display: block;
        float: left;
    }
    .banner {
        position: absolute;
        top: 0;
    }
    .bannerImg {
        position: relative;
        display: block;
        float: left;
    }
    .redText{
        color: red;
    }
</style>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<div class="border">
    <header>
        <banner class="banner">
            <img class="bannerImg" src="@Url.Content("~/Content/logo.png")" ;" />
        </banner>
    </header>
    <div class="holder">
            <div class="formInput">
                @using (Html.BeginForm("getPermission", "Login", FormMethod.Post))
                {
                    <h2>Login</h2>
                    <label>Username: </label> <input class="username" id="Username" name="Username" type="text" value="@Model.Username" />
                    <br />
                    @Html.ValidationMessageFor(model => model.Username, null, new { @class = "redText" })
                    <br />
                    <label>Password: </label> <input class=" pass" id="Password" name="Password" type="password" value="@Model.Password" />
                    <br />
                    @Html.ValidationMessageFor(model => model.Password, null, new { @class = "redText" })
                    <br />
                    <input class="submitButton" id="SubmitLogin" type="submit" value="Login" />
                }
                <div class="form-group error">
                    @if (@ViewBag.PromptMessage != null)
                    {

                        <script type="text/javascript">
                            $(document).ready(function () {
                                var yourPrompt= '@ViewBag.PromptMessage';
                                alert(yourPrompt);
                            });
                        </script>
                    }
                </div>
        </div>
      
        <footer class="footer">
            <img class="footerImg" src="@Url.Content("~/Content/footer.png")" align="bottom" style=" width: 100%;" />
        </footer>
    </div>
</div>